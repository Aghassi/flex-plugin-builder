{
  "name": "flex-plugin-builder",
  "private": true,
  "homepage": "https://github.com/twilio/flex-plugin-builder#readme",
  "bugs": {
    "url": "https://github.com/twilio/flex-plugin-builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twilio/flex-plugin-builder.git"
  },
  "license": "MIT",
  "contributors": [
    "Dominik Kundel <dkundel@twilio.com>",
    "Kousha Talebian <ktalebian@twilio.com>"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "audit": "lerna-audit",
    "bootstrap": "lerna bootstrap --no-ci",
    "build": "lerna run build",
    "coverage": "codecov",
    "docs": "./bin/docs-generator.js",
    "postinstall": "npm run bootstrap",
    "lint": "tslint --project tsconfig.lint.json",
    "lint:fix": "tslint --project tsconfig.lint.json --fix",
    "publish:alpha": "lerna-publish alpha",
    "publish:beta": "lerna-publish beta",
    "publish:public": "lerna-publish public",
    "test": "jest --color",
    "test:ci": "jest --clearCache && jest --coverage --color --maxConcurrency 2 --maxWorkers=2",
    "test:coverage": "jest --color --coverage",
    "test:watch": "jest --watchAll --color"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ultra lint",
      "pre-push": "ultra test"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@k88/lerna-publish": "^1.0.3",
    "@k88/pipe-compose": "^2.1.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.0",
    "babel-register": "^6.26.0",
    "codecov": "^3.8.0",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "lerna": "^3.22.1",
    "lerna-audit": "^1.2.0",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.7",
    "ultra-runner": "^3.5.0"
  }
}
